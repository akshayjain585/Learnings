package arraysPrograms;

public class ArrayRotation {

	public void arrayRot(int m, int n, int[][] list ){
		int t=0; int b = m-1; int l=0 ; int r = n-1;

		int dir =0;
		while(t<=b && l<=r){
			if(dir==0){
				for(int i=l; i<=r; i++){
					System.out.println(list[t][i]);
					t++;
					dir=1;
				}
			}else if(dir==1){
				for(int i=t; i<=b; i++){
					System.out.println(list[i][r]);
					r--;
					dir=2;
				}
			}else if(dir==2){
				for(int i=r; i>=l; i--){
					System.out.println(list[b][i]);
					b--;
					dir=3;
				}
			}
			else if(dir ==3){
				for(int i=b; i>=t; i--){
					System.out.println(list[i][l]);
					l++;
					dir=0;
				}
			}
		}
	}


	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
